{
  "compilerOptions": {
    "target": "ESNext", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "jsx": "react", 
    "module": "ESNext",  
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "declarationDir": "./types",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ]
}
